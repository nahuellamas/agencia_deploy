extends ./layaout/index

block contenido
    main.container.mt-5
        h1.text-center #{pagina}
        h2.text-center Lee sobre nuestros clientes
        include ./layaout/bloque_comentarios


        .row
            
            .col-md-12
                h2.d-block.w-100.text-center  Â¡Agrega un testimonio!
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/comentarios" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Correo Electronico 
                            input#correo(type="text", placeholder="Tu Correo", name="correo", class="form-control", value= correo)
                        .form-group
                            label(for="mensaje") Mensaje  
                            textarea#mensaje(name="mensaje", rows="4", class="form-control", placeholder="Tu mensaje...", )= mensaje

                        button.btn.btn-success.btn-block(type="submit") ENVIAR